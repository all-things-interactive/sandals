{
    "cmd": [ "sh", "-xc", "ifconfig;(hostname>/tmp/@special);pstree -p;cat /proc/self/cgroup;ls /proc/1/fd;exit 42" ],
    "stdStreams": { "file": "/dev/stdout", "limit": 1000 },
    "pipes": [
        { "file": "/dev/stderr", "fifo": "/tmp/@special" }
    ],
    "mounts": [
        { "type": "tmpfs", "dest": "/tmp" },
        { "type": "proc", "dest": "/proc" }
    ]
}

